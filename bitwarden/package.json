{
  "$schema": "https://raw.githubusercontent.com/vicinaehq/vicinae/refs/heads/main/extra/schemas/extension.json",
  "name": "bitwarden",
  "title": "Bitwarden/Vaultwarden",
  "description": "Access and manage Bitwarden/Vaultwarden passwords, TOTP codes, and secure notes",
  "icon": "extension_icon.png",
  "author": "dadmin",
  "license": "MIT",
  "categories": ["Security", "Productivity"],
  "commands": [
    {
      "name": "search-vault",
      "title": "Search Vault",
      "description": "Search for passwords, cards, and notes across your vault",
      "mode": "view"
    },
    {
      "name": "browse-logins",
      "title": "Browse Logins",
      "description": "Browse and manage login items",
      "mode": "view"
    },
    {
      "name": "browse-cards",
      "title": "Browse Cards",
      "description": "Browse and manage credit card items",
      "mode": "view"
    },
    {
      "name": "browse-notes",
      "title": "Browse Notes",
      "description": "Browse and manage secure notes",
      "mode": "view"
    },
    {
      "name": "generate-password",
      "title": "Generate Password",
      "description": "Generate secure passwords with customizable options",
      "mode": "view"
    },
    {
      "name": "unlock-vault",
      "title": "Unlock Vault",
      "description": "Unlock your Bitwarden vault",
      "mode": "no-view"
    },
    {
      "name": "lock-vault",
      "title": "Lock Vault",
      "description": "Lock your Bitwarden vault",
      "mode": "no-view"
    },
    {
      "name": "sync-vault",
      "title": "Sync Vault",
      "description": "Synchronize your vault with the server",
      "mode": "no-view"
    },
    {
      "name": "debug-auth",
      "title": "Debug Authentication",
      "description": "Debug Vaultwarden connection and authentication",
      "mode": "view"
    },
    {
      "name": "test-auth-direct",
      "title": "Test Direct Auth",
      "description": "Test authentication with hardcoded credentials",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "serverUrl",
      "title": "Vaultwarden Server URL",
      "description": "Your Vaultwarden server URL (e.g., https://vault.example.com)",
      "type": "textfield",
      "required": true
    },
    {
      "name": "email",
      "title": "Email",
      "description": "Your Bitwarden account email",
      "type": "textfield",
      "required": true
    },
    {
      "name": "masterPassword",
      "title": "Master Password",
      "description": "Your Bitwarden master password",
      "type": "password",
      "required": true
    },
    {
      "name": "sessionTimeout",
      "title": "Session Timeout (minutes)",
      "description": "How long to keep session active (default: 60 minutes)",
      "type": "textfield",
      "required": false,
      "default": "60"
    },
    {
      "name": "clipboardTimeout",
      "title": "Clipboard Timeout (seconds)",
      "description": "Clear clipboard after copying sensitive data (default: 30 seconds)",
      "type": "textfield",
      "required": false,
      "default": "30"
    }
  ],
  "dependencies": {
    "@vicinae/api": "latest",
    "node-fetch": "^3.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "typescript": "^5.0.0"
  },
  "scripts": {
    "build": "vici build",
    "dev": "vici dev",
    "lint": "vici lint"
  }
}