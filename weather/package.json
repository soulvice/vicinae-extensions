{
  "$schema": "https://raw.githubusercontent.com/vicinaehq/vicinae/refs/heads/main/extra/schemas/extension.json",
  "name": "weather",
  "title": "Weather",
  "version": "0.3.0",
  "description": "Weather forecast via wttr.in",
  "icon": "weather.png",
  "author": "tonka3000",
  "contributors": [
    "xilopaint"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Weather",
      "description": "Weather forecast via wttr.in",
      "mode": "view"
    },
    {
      "name": "menubar",
      "title": "Weather Menu Bar",
      "description": "Show weather in menu bar",
      "mode": "menu-bar",
      "interval": "30m",
      "preferences": [
        {
          "name": "showmenuicon",
          "description": "Show Icon",
          "type": "checkbox",
          "required": false,
          "title": "Appearance",
          "label": "Show Icon",
          "default": true
        },
        {
          "name": "showmenutext",
          "description": "Show Text",
          "type": "checkbox",
          "required": false,
          "label": "Show Text",
          "default": true
        }
      ]
    }
  ],
  "preferences": [
    {
      "name": "unitsystem",
      "type": "dropdown",
      "title": "Unit System",
      "required": false,
      "default": "metric",
      "description": "Unit System",
      "data": [
        {
          "title": "Metric System",
          "value": "metric"
        },
        {
          "title": "Imperial Units",
          "value": "imperial"
        }
      ]
    },
    {
      "name": "defaultquery",
      "type": "textfield",
      "title": "Default query",
      "placeholder": "Empty or location (e.g. London)",
      "required": false,
      "default": "",
      "description": "Default query when search bar is empty. Same content as in the search bar."
    },
    {
      "name": "clockformat",
      "description": "Clock Format",
      "type": "dropdown",
      "title": "Clock Format",
      "default": "12h",
      "required": false,
      "data": [
        {
          "title": "12 Hours",
          "value": "12h"
        },
        {
          "title": "24 Hours",
          "value": "24h"
        }
      ]
    }
  ],
  "dependencies": {
    "@vicinae/api": "latest",
    "cross-fetch": "^4.0.0",
    "javascript-time-ago": "^2.5.9",
    "moment": "^2.29.1"
  },
  "devDependencies": {
    "@types/moment": "^2.13.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "typescript": "^5.0.0"
  },
  "scripts": {
    "build": "vici build",
    "dev": "vici dev",
    "lint": "vici lint"
  }
}
